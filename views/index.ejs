<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Url Shrinker to shrink long urls as shorten"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <title>Url Shortener</title>
  </head>
  <body>
    <div class="container my-2">
      <h1 class="mb-2">URL Shrinker</h1>
      <form action="/shortUrls" class="input-group" method="post" class="my-4">
        <input
          required
          placeholder="Url"
          type="url"
          name="fullUrl"
          id="fullUrl"
          class="form-control mr-2"
        />
        <button type="submit" class="btn btn-success">Shrink</button>
      </form>

      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Full URL</th>
              <th scope="col">Short URL</th>
              <th scope="col">Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% shortUrls.forEach(shortUrl => { %>
            <tr>
              <td>
                <a href="<%= shortUrl.full %>"><%= shortUrl.full %></a>
              </td>
              <td>
                <a href="<%= shortUrl.short %>"><%= shortUrl.short %></a>
              </td>
              <td><%= shortUrl.clicks %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
